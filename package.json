{
  "name": "website-demo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "rm -rf public/ & concurrently npm:watch:*",
    "watch:tailwind": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:hugo": "hugo server",
    "tailwind:watch": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "build": "hugo --cleanDestinationDir --minify",
    "test": "hugo"
  },
  "keywords": [
    "Website",
    "Homepage",
    "Hugo",
    "TailwindCSS"
  ],
  "author": "SoraNoIseki",
  "license": "GPL-3.0-only",
  "description": "A simple website demo",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "flowbite": "^2.5.2",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "http-server": "^14.1.1",
    "postcss-import": "^16.1.0"
  }
}
